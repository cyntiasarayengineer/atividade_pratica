using System;
using System.Globalization;

namespace Estoque
{
    class Estoque
    {
        public string Produto { get; set; }
        public object PrecoUnidade { get; set; }
        public string Quantidade { get; set; }

        static void Main(string[] args)
        {
            string Produto = "TV";
            double PrecoUnidade = 900;
            int Quantidade = 10;

            Console.WriteLine($"Produto: {Produto} | Preço Unitário: {PrecoUnidade} | Quantidade: {Quantidade}");
            Console.WriteLine($"Total em Estoque: {PrecoUnidade * Quantidade}");

            // Tentativa de criar o ValorTotalEmEstoque, adicionarProdutos e RemoverProdutos

            static double ValorTotalEmEstoque(int Quantidade)
            {
                return PrecoUnidade * Quantidade;
                Console.WriteLine($"{ValorTotalEmEstoque}");

            }

            void AdicionarProdutos(int quantidade)
            {
                Quantidade += quantidade;
            }

            void RemoverProdutos(int quantidade)
            {
                Quantidade -= quantidade;
            }
        }
    }
}
